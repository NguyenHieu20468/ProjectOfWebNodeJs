<html>

<head>
  <link href="/css/styles.css" type="text/css" rel="stylesheet" /> 
  

</head>

<body style="background-color: rgba(0, 128, 0, 0.3);" 
class="customer">
  <%- include('./_menu.ejs') %>
  <%- include('./_inform.ejs') %>
  <div class="align-center">
    <br>
    <h2 class="text-center">SẢN PHẨM MỚI</h2>
    <%  for (var prod of newprods) { %>
    <div class="inline">
      <figure>
        <a href="./details?id=<%=prod._id%>"><img src="data:image/jpg;base64,<%=prod.image%>" width="300px" height="300px" /></a>
        <figcaption class="text-center"><%=prod.name%><br />Giá: <%=prod.price%></figcaption>
      </figure>
    </div>
    <%  } %>
  </div>
  <%  if (hotprods) { %>
  <div class="align-center">
    <h2 class="text-center">SẢN PHẨM BÁN CHẠY</h2>
    <%  for (var prod of hotprods) { %>
    <div class="inline">
      <figure>
        <a href="./details?id=<%=prod._id%>"><img src="data:image/jpg;base64,<%=prod.image%>" width="300px" height="300px" /></a>
        <figcaption class="text-center"><%=prod.name%><br />Giá: <%=prod.price%></figcaption>
      </figure>
    </div>
    <%  } %>
  </div>
  <%  } %>

  
</body>

</html>